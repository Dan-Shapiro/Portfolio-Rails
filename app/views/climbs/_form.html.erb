<%= form_for @climb do |f| %>
	<% if @climb.errors.any? %>
		<h2><%= pluralize(@climb.errors.count, "error") %> prevented this climb post from saving:</h2>
		<ul>
			<%= @climb.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<% end %>
		</ul>
	<% end %>

	<%= f.label :title %><br>
	<%= f.text_field :title %>

	<br>
	<br>

	<%= f.label :grade %><br>
