<div id="post_show_content" class="skinny_wrapper wrapper_padding">
	<header>
		<p class="date"><%= @climb.created_at.strftime("%A, %B %d") %></p>
		<h1><%= @climb.title %> <span class="grade"><%= @climb.grade %></span></h1>
		<hr>
	</header>

	<div id="content">
		<%= markdown @climb.content %>
	</div>

	<% if user_signed_in? %>
		<div id="admin_links">
			<%= link_to "Edit", edit_climb_path(@climb) %>
			<%= link_to "Delete", climb_path(@climb), method: :delete, data: { confirm: "Are you sure you want to delete this climb post?" } %>
		</div>
	<% end %>

	<hr>

	<%= render 'disqus' %>
</div>
