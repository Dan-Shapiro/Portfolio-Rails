<div id="post_show_content" class="skinny_wrapper wrapper_padding">
	<header>
		<p class="date"><%= @project.created_at.strftime("%A, %B %d") %></p>
		<h1><%= @project.title %></h1>
		<hr>
	</header>

	<div id="content">
		<%= markdown @project.description %>

		<div class="button_wrapper">
			<%= link_to "Check it out", @project.link, :class => "project_button", target: :_blank%>
		</div>
	</div>

	<hr>

	<%= render 'disqus' %>
</div>

<%= link_to "Edit", edit_project_path(@project) %>
<%= link_to "Delete", project_path(@project), method: :delete, data: { confirm: "Are you sure you want to delete this project post?" } %>
