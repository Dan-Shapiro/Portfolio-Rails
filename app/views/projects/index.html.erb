<h1 id="page_title">Stuff I've Built</h1>

<div id="posts_wrapper" class="skinny_wrapper">
	<% if @projects.count.zero? %>
		<p>No project posts created yet.</p>
	<% end %>

	<% @projects.each do |project| %>
		<div class="post">
			<p class="date"><%= project.created_at.strftime("%A, %B %d") %></p>
			<h2><%= link_to project.title, project %></h2>
			<hr>
		</div>
	<% end %>
</div>

<%= render 'pagination' %>